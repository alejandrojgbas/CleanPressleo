<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    >
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context="cleanpress.cleanpress.ScheduleScreen">

    <TextView
        android:text="When would you like to schedule a pickup?"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:padding="40dp"
        android:id="@+id/Title"
        android:textColor="#444444"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/white_buttons"
        android:text="Later"
        android:textAllCaps="false"
        android:textColor="#444444"
        android:textSize="20dp"
        android:id="@+id/btnLater"
        android:onClick="RequestLater"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/green_buttons"
        android:text="Now"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/btnNow"
        android:onClick="RequestNow"
        android:layout_marginTop="10dp"/>

</LinearLayout>
</ScrollView>
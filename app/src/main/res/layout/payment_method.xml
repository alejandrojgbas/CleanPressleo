<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cleanpress.cleanpress.PaymentMethod">

    <TextView
        android:text="Credit Card Info"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textColor="#03e1ed"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        />



        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Credit Card Number*"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/cc_number"
            android:layout_marginTop="40dp"
            android:textSize="18dp"

            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:hint="MM*"
                android:inputType="number"
                android:id="@+id/cc_mm"
                android:textSize="18dp"
                />

            <View
                android:layout_width="2px"
                android:layout_height="30dp"
                android:background="#999999"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="YYYY*"
                android:inputType="number"
                android:id="@+id/cc_yy"
                android:textSize="18dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:hint="CVC*"
                android:inputType="numberPassword"
                android:id="@+id/cc_cvc"
                android:textSize="18dp"
                />
            <View
                android:layout_width="2px"
                android:layout_height="30dp"
                android:background="#999999"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                />
            <EditText
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Zipcode*"
                android:inputType="number"
                android:id="@+id/cc_zip"
                android:textSize="18dp"
                />

        </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/white_buttons"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:id="@+id/authorize_cc"
        android:layout_marginTop="30dp"
        android:textColor="#999999"
        android:text="Authorize"
        android:onClick="authorizeCC"

        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#444444"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:text="Continue"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:background="#c1c2c7"
        android:enabled="false"
        android:id="@+id/Schedule"
        android:onClick="toSchedule"
        />

</LinearLayout>
    </ScrollView>